<Window x:Class="DownloadYouTube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YouTube downloader by JP" Height="650" Width="960" Icon="Dakirby309-Windows-8-Metro-Web-YouTube-Metro.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <WebBrowser x:Name="webBrowser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" 
                    Grid.Column="0" Grid.Row="0" Source="http://www.youtube.com"  Navigated="WebBrowser_Navigated"/>
        <Grid Grid.Column="0" Grid.Row="1" Background="#FFB7CCE1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600*"/>
                <ColumnDefinition Width="175*"/>
                <ColumnDefinition Width="175*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="tbDir" Text="C:\" Margin="15,13,13.4,7.8" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="16" Grid.ColumnSpan="2" Height="24" />
            <Button x:Name="btnDir" Content="Download folder" Margin="16.6,12,14.6,6.8" Grid.Row="0" Grid.Column="2" Click="btnDir_Click" VerticalAlignment="Center" FontSize="16" Height="26"/>
            <ListBox x:Name="options" Visibility="Collapsed" Grid.Row="1" Grid.Column="0" Margin="0,1.2,5.4,0.2"/>
            <Button x:Name="btnDownload" Visibility="Collapsed" Grid.Row="1" Grid.Column="1" Click="btnDownload_Click" HorizontalAlignment="Center" Content="Download Youtube" Margin="15" FontSize="16"/>
            <Label x:Name="lblMsg" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" Height="9" Margin="5.6,53.2,-0.4,48.2" />
        </Grid>
    </Grid>
</Window>
